rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rule for deposit slips
    match /deposit_slips/{requestId}/{fileName} {
      // Allow write only if the uploader is the salesman associated with the commission request.
      allow write: if request.auth != null && 
                      get(/databases/$(database)/documents/commissionRequests/$(requestId)).data.salesmanId == request.auth.uid;
                      
      // Allow read only by an Admin or the salesman who owns the request.
      allow read: if request.auth != null &&
                   (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin' ||
                    get(/databases/$(database)/documents/commissionRequests/$(requestId)).data.salesmanId == request.auth.uid);
    }
  }
}
