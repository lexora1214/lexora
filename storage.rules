rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /deposit_slips/{requestId}/{fileName} {
      // Allow read access to the salesman who uploaded it (via metadata) and Admins (via Firestore get)
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.metadata.salesmanId || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');
      
      // Allow write (create) if the user is authenticated and the salesmanId in metadata matches their UID.
      // The check that they are the *correct* salesman for the requestId is done in client code before upload.
      allow write: if request.auth != null &&
                      request.resource.metadata.salesmanId == request.auth.uid &&
                      request.resource.metadata.requestId == requestId;
    }
  }
}
